<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:text="Score: 0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridImag" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridImag"
        android:layout_width="370dp"
        android:layout_height="392dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="79dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/kennyFir"
            android:layout_width="123dp"
            android:layout_height="131dp"
            android:contentDescription="@string/app_name"
            android:onClick="incScore"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kennyFour"
            android:layout_width="123dp"
            android:layout_height="131dp"
            android:contentDescription="@string/app_name"
            app:layout_column="0"
            app:layout_row="1"
            android:onClick="incScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kennySev"
            android:layout_width="123dp"
            android:layout_height="131dp"
            android:contentDescription="@string/app_name"
            app:layout_column="0"
            app:layout_row="2"
            android:onClick="incScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kennySec"
            android:layout_width="123dp"
            android:layout_height="131dp"
            android:contentDescription="@string/app_name"
            app:layout_column="1"
            app:layout_row="0"
            android:onClick="incScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kennyThir"
            android:layout_width="123dp"
            android:layout_height="131dp"
            android:contentDescription="@string/app_name"
            app:layout_column="2"
            app:layout_row="0"
            android:onClick="incScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kennySix"
            android:layout_width="123dp"
            android:layout_height="131dp"
            android:contentDescription="@string/app_name"
            app:layout_column="2"
            app:layout_row="1"
            android:onClick="incScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kennyFive"
            android:layout_width="123dp"
            android:layout_height="131dp"
            android:contentDescription="@string/app_name"
            app:layout_column="1"
            app:layout_row="1"
            android:onClick="incScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kennyNine"
            android:layout_width="123dp"
            android:layout_height="131dp"
            android:contentDescription="@string/app_name"
            app:layout_column="2"
            app:layout_row="2"
            android:onClick="incScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kennyEigh"
            android:layout_width="123dp"
            android:layout_height="131dp"
            android:contentDescription="@string/app_name"
            app:layout_column="1"
            app:layout_row="2"
            android:onClick="incScore"
            app:srcCompat="@drawable/kenny" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/timeText"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:text="Time: 10"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridImag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>